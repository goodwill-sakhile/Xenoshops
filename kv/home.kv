<HomeScreen>:
    name: "home"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "20dp"

        MDLabel:
            text: "Retail Shop Directory"
            halign: "center"
            font_style: "H4"

        MDRaisedButton:
            text: "View Grocery Shops"
            on_release: app.sm.current = "shop_list"

        MDRaisedButton:
            text: "Search Shops"
            on_release: app.sm.current = "search"
        MDFloatingActionButton:
            icon: "logout"
            pos_hint: {"right": 0.95, "top": 0.95}
            on_release:
                app.sm.parent.token = ""
                app.sm.current = "login"


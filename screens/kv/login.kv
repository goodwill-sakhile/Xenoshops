<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "10dp"

        MDTopAppBar:
            title: "Login"

        MDTextField:
            id: username
            hint_text: "Username"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True

        MDLabel:
            id: error
            text: ""
            theme_text_color: "Error"

        MDRaisedButton:
            text: "Login"
            on_release: root.login_user()
